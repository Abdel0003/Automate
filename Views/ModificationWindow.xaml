<Window x:Class="Automate.Views.ModificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automate.Views"
        mc:Ignorable="d"
        Title="ModificationWindow" Height="300" Width="400">
    <Grid Loaded="Window_Loaded">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="lblTitre"/>
            <TextBlock x:Name="txtTitre"/>
            <TextBlock x:Name="txtJour"/>
            <TextBlock x:Name="txtTache"/>
            <Button x:Name="btnTache"></Button>
        </StackPanel>
        
    </Grid>
</Window>
